<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Image Section -->
        <ImageView
            android:id="@+id/iv_article_image"
            android:layout_width="380dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:contentDescription="Plant Image" />

        <!-- Text and Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Tanaman Name (Common Name) -->
            <TextView
                android:id="@+id/tv_plant_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="European Silver Fir"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/dark_green" />

            <!-- Scientific Name -->
            <TextView
                android:id="@+id/tv_scientific_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abies alba"
                android:textSize="14sp"
                android:textColor="@color/gainsboro" />

            <!-- Life Cycle (Perennial/Annual) -->
            <TextView
                android:id="@+id/tv_life_cycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Siklus Hidup: Perennial"
                android:textSize="14sp"
                android:textColor="@color/gainsboro" />

            <!-- Watering Information -->
            <TextView
                android:id="@+id/tv_watering"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Perawatan: Frequent watering"
                android:textSize="14sp"
                android:textColor="@color/gainsboro" />

            <!-- Sunlight Information -->
            <TextView
                android:id="@+id/tv_sunlight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cahaya: Full Sun"
                android:textSize="14sp"
                android:textColor="@color/gainsboro" />

            <!-- Button to open more details -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_look"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:backgroundTint="@color/medium_sea_green"
                android:text="@string/btn_article"
                android:textSize="14sp"
                app:cornerRadius="8dp"
                android:layout_marginTop="12dp"
                android:textColor="@color/white"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:elevation="4dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
